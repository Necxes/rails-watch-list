<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-12 px-0 px-1 ps-md-0">
      <div class="off-screen sticky-top py-3 py-md-5 px-3 px-md-0">
        <div class="off-screen-inner">
          <h1>Movie lists</h1>
          <i class="fa-solid fa-circle-play fa-fw fa-2x text-white mt-md-1 mt-0" style="opacity: 1"></i>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-11 py-3">
      <div class="row row-cols-2 g-3">
        <div class="col">
          <div class="card list no-hover" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url(https://source.unsplash.com/wMkaMXTJjlQ); background-size:cover; background-repeat: no-repeat;">
            Welcome to <span class="text-primary">Movie List</span>
            <span class="description">An interactive movie database to mark your favourites and keep them in order ðŸ˜Ž</span>
          </div>
        </div>
        <% @lists.each do |list|  %>
          <div class="col">
            <div class="card list">
              <%= list.name.capitalize %>
              <%= link_to '', list_path(list) %>
            </div>
          </div>
        <% end %>
        <div class="col">
          <div class="card list add-item">
            <i class="fa-solid fa-circle-plus fa-3x"></i>
            <%= link_to '', new_list_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
