<div class="container-fluid" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(https://source.unsplash.com/wMkaMXTJjlQ); background-size:cover; background-repeat: no-repeat; background-position-y: 20%;">
  <div class="container py-5 vh-100">
    <div class="row justify-content-center h-100 align-items-center">
      <div class="col-10">
        <div class="card form">
          <h1 class="mb-4">Create a new <span class="text-primary">list</span></h1>
          <%= simple_form_for @list do |f| %>
            <%= f.input :name %>
            <div class="button-list">
              <%= link_to "Cancel", :back %>
              <%= f.submit 'Add list', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
