<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <h1>Add movie to <%= @list.name %></h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
